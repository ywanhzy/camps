/* pages/indexs/indexs.wxss */
.container {
  background-color: #fff;
  min-height: 100%;
}
.swiper-container{
  width: 750rpx;
  position: relative;  
  background-color: #666666;
}
.swiper_box {
  width: 100%;
  height:562.5rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:562.5rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}


.coupons{
  margin-top:10rpx;
  width: 100%;
  height: 400rpx;

}
.coupons-scroll{
  white-space: nowrap;
  height: 400rpx;
  width: 100%;
  background-color: #999999;
  display: flex;  
  flex-direction: row; 
}
.coupons-item{
  width:300rpx;
  height: 400rpx;
  margin: 10rpx;
  padding-top: 20rpx;
  padding-left: 15rpx;
  background-color: #fff;
  box-sizing: content-box;
  font-size: 20rpx;
  line-height: 35rpx;
  overflow: hidden;
  color: #000;
  display: inline-block;
}

.profile{
  width: 50rpx;
  height: 50rpx;
  border: 0 solid #ff0000;
  border-radius: 100rpx;
  background-color: #f10b2e;
}